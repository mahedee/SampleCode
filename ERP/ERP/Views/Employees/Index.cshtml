@model IEnumerable<ERP.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Gid
        </th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            DeptId
        </th>
        <th>
            DesignationId
        </th>
        <th>
            BloodGroupId
        </th>
        <th>
            MaritalStatus
        </th>
        <th>
            JoiningDt
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Gid
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Address
        </td>
        <td>
			@item.DeptId
        </td>
        <td>
			@item.DesignationId
        </td>
        <td>
			@item.BloodGroupId
        </td>
        <td>
			@item.MaritalStatus
        </td>
        <td>
			@String.Format("{0:g}", item.JoiningDt)
        </td>
    </tr>
}

</table>


